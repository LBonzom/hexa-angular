{
  "name": "hexa-angular",
  "version": "1.0.0",
  "description": "demo repository to present hexagonal architecture with Angular and lazy Loading",
  "main": "index.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:mono-repo": "ng build port-lib-a && ng build port-lib-b && ng build adapters-app",
    "build:libs": "ng build lib-a && ng build lib-b",
    "build:all": "npm run build:mono-repo && npm run build:libs",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LBonzom/hexa-angular.git"
  },
  "keywords": [
    "angular",
    "lazy",
    "loading",
    "architecture",
    "hexagonale"
  ],
  "author": "laurent.bonzom.pro@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LBonzom/hexa-angular/issues"
  },
  "homepage": "https://github.com/LBonzom/hexa-angular#readme",
